<div class="tutor-card">
    <div class="img-card">
        <img class="tutor-img" src="{{this.photo}}">
        <br>
        <b>{{this.name}}</b>
    </div>
    <div class="subjects">
        <b>Subjects</b>
        <ul>
            <li>{{this.subjects}}</li>

        </ul>
    </div>
    <div class="about">
        <b>About</b>
        <br>
        <p>{{this.bio}}</p>
    </div>
    <div class="rating">
        <b>Rating</b>
        <br>
        <br>
        <p>{{this.ratings}} / 10</p>
    </div>
    <button href="#" class="messageBtn" data-open="modal1">Message!</button>
    <div id="messageModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>

            <div class="messageContainer">
                <br>
                <b class="messageHead">Send message to {{this.name}}</b>
                <hr id="messageHR">
                <label for="message">
                    <b>Enter Message Below</b>
                </label>
                <textarea id="messageBox" name="message" rows="10" cols="50" form="messageForm">Why not ask when this tutor is available?
                        </textarea>
                <button type="submit" id="sendBtn">Send</button>
            </div>

        </div>
    </div>
</div>
</div>

<script>
    var message = document.getElementById('messageModal');

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close");

    var buttons = document.getElementsByClassName("messageBtn");

    for (i = 0; i < span.length; i++) {
        span[i].addEventListener('click', function () {
            message.style.display = "none";
        }, false)
    }

    for (i = 0; i < buttons.length; i++) {
        buttons[i].addEventListener('click', function () {
            message.style.display = "block";
        }, false)
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == signUp) {
            message.style.display = "none";
        }
    }
</script>
