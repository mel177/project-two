<div class="cardContainer">
    <div class="sideBar">
        <a class="sideLink" href="/">Back To Seach</a>
        <br>
        <a class="sideLink" href="">Profile Page</a>
        <br>
        <a class="sideLink" href="">Messages</a>
    </div>
    <!-- Tutor cards will be displayed here -->
    
       {{#each tutor}}
        
<div class="tutor-card">
            <div class="img-card">
                <img class="tutor-img" src="/imgs/tutorimg.jpg">
                <br>
                <b>{{this.name}}</b>
            </div>
            <div class="subjects">
                <b>Subjects</b>
                <ul>
                    <li>{{this.subjects}}</li>

                </ul>
            </div>
            <div class="about">
                <b>About</b>
                <br>
                <p>{{this.bio}}</p>
            </div>
            <div class="rating">
                <b>Rating</b>
                <br>
                <br>
                <p>{{this.ratings}}</p>
            </div>
            <button href="#" id="messageBtn" data-open="modal1">Message!</button>
            <div id="messageModal" class="modal">
                <div class="modal-content">
                    <span class="close">&times;</span>

                    <div class="messageContainer">
                        <br>
                        <b class="messageHead">Send message to John Doe!</b>
                        <hr id="messageHR">
                        <label for="message">
                            <b>Enter Message Below</b>
                        </label>
                        <textarea id="messageBox" name="message" rows="10" cols="50" form="messageForm">Why not ask when this tutor is available?
                        </textarea>
                        <button type="submit" id="sendBtn">Send</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

</div>

